.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group{}
        おまつ
      %ul.main-header__left-box__member-list
        Member :
        %li.main-header__left-box__member-list__member omatsu
    %a{}
      .main-header__edit-btn Edit
  .messages
    .message{}
      .message__upper-info
        %p.message__upper-info__talker aaaa
        %p.message__upper-info__date 2019/11/18(Mon)20:10:00
      %p.message__text おはようございます
  .form
    %form#new_message.new_message{}
      %input{:name => "utf8", :type => "hidden", :value => "✓"}/
      %input{:name => "authenticity_token", :type => "hidden", :value => ""}/
      .input-box
        %input#message_content.input-box__text{:name => "message[content]", :placeholder => "type a message", :type => "text"}/
        %label.input-box__image
          %i.fa.fa-image
          %input#message_image.input-box__image__file{:name => "message[image]", :type => "file"}/
      %input.submit-btn{"data-disable-with" => "Send", :name => "commit", :type => "submit", :value => "Send"}/
